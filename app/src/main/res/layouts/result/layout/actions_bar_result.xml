<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingLeft="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingRight="@dimen/horizontal_padding"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnChangeTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_format_size_black_24"
            android:background="?selectableItemBackgroundBorderless"
            android:tint="@color/colorPrimary"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_file_copy_black_22"
            android:background="?selectableItemBackgroundBorderless"
            android:tint="@color/colorPrimary"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            card_view:layout_constraintLeft_toRightOf="@id/iBtnChangeTextSize"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/round_alarm_black_24"
            android:tint="@color/selector_btn_reminder_tint_colors"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/iBtnCopy"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/round_star_border_black_22"
            android:tint="@color/selector_btn_favorite_tint_colors"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/iBtnReminder"
            android:contentDescription="@string/des_favorite_button"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnBrSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_volume_high_black_32dp"
            android:tint="@color/color_tint_speaker_br"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/iBtnFavorite"
            android:contentDescription="@string/des_favorite_button"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnAmeSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_volume_high_black_32dp"
            android:tint="@color/color_tint_speaker_ame"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/iBtnBrSound"
            android:contentDescription="@string/des_favorite_button"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnCheckPronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/outline_mic_black_32"
            android:tint="@color/colorPrimary"
            android:theme="@style/AppTheme.colorPrimaryRipple"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/des_favorite_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>