<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.main.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cslSearchBoxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box_background"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/search_box_margin_top"
            android:layout_marginBottom="@dimen/search_box_margin_bottom"
            android:layout_marginStart="@dimen/search_box_margin_start"
            android:layout_marginLeft="@dimen/search_box_margin_start"
            android:layout_marginEnd="@dimen/search_box_margin_end"
            android:layout_marginRight="@dimen/search_box_margin_end"
            android:paddingTop="@dimen/search_box_padding_top"
            android:paddingBottom="@dimen/search_box_padding_bottom"
            android:paddingStart="@dimen/search_box_padding_start"
            android:paddingLeft="@dimen/search_box_padding_start"
            android:paddingEnd="@dimen/search_box_padding_end"
            android:paddingRight="@dimen/search_box_padding_end"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iBtnEmptySearchBox"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="@color/color_search_Box_text"
                android:textColorHint="@color/color_search_Box_text_hint"
                android:textSize="@dimen/text_size_search_box"
                android:hint="@string/search_box_hint"
                android:drawableLeft="@drawable/outline_search_black_24"
                android:drawableStart="@drawable/outline_search_black_24"
                android:drawablePadding="@dimen/search_box_search_icon_padding"
                android:drawableTint="@color/colorPrimary"
                android:drawableTintMode="src_in"
                android:maxLines="1"
                android:autofillHints="@string/search_box_hint"
                tools:ignore="UnusedAttribute" />
            <ImageButton
                android:id="@+id/iBtnMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iBtnCamera"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/outline_mic_black_24"
                android:tint="@color/colorPrimary"
                android:theme="@style/AppTheme.colorPrimaryRipple"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="@string/des_mic_button"/>

            <ImageButton
                android:id="@+id/iBtnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/baseline_photo_camera_black_24"
                android:tint="@color/colorPrimary"
                android:theme="@style/AppTheme.colorPrimaryRipple"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical|end"
                android:contentDescription="@string/des_camera_button"/>

            <ImageButton
                android:id="@+id/iBtnEmptySearchBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toEndOf="@id/edtSearch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/outline_close_black_24"
                android:tint="@color/colorPrimary"
                android:theme="@style/AppTheme.colorPrimaryRipple"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical|end"
                android:visibility="invisible"
                android:contentDescription="@string/des_empty_search_box"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/search_box_margin_end"
            android:layout_marginRight="@dimen/search_box_margin_end"
            android:layout_marginBottom="@dimen/search_box_margin_bottom"
            android:text="@string/switch_dark_mode"
            app:switchPadding="@dimen/horizontal_padding_half"
            android:layout_gravity="end"/>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>