<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:contentPaddingLeft="@dimen/search_box_margin_start"
    card_view:contentPaddingRight="@dimen/search_box_margin_end"
    card_view:contentPaddingTop="@dimen/vertical_padding_half"
    card_view:contentPaddingBottom="@dimen/vertical_padding_half"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorBackground"
    tools:targetApi="lollipop">
    <TextView
        android:id="@+id/txtSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        tools:text="@string/app_name"/>
</androidx.cardview.widget.CardView>