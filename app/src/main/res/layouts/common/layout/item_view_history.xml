<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:contentPaddingLeft="@dimen/search_box_margin_start"
    card_view:contentPaddingRight="@dimen/search_box_margin_end"
    card_view:contentPaddingTop="@dimen/vertical_padding_half"
    card_view:contentPaddingBottom="@dimen/vertical_padding_half"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorBackground"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtWord"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="parent"
            card_view:layout_constraintWidth_percent=".6"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/txtIpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/txtTimeElapsed"
            card_view:layout_constraintStart_toEndOf="@id/txtWord"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimeElapsed"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/round_history_black_18"
            android:drawableLeft="@drawable/round_history_black_18"
            android:drawablePadding="@dimen/padding_4dp"
            android:gravity="center_vertical"
            android:maxLength="8"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/iBtnFavorite"
            card_view:layout_constraintStart_toEndOf="@id/txtWord"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintWidth_percent="0.2"
            tools:text="@string/app_name" />

        <ImageButton
            android:id="@+id/iBtnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/round_star_border_black_24"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/txtTimeElapsed"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintWidth_percent="0.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>