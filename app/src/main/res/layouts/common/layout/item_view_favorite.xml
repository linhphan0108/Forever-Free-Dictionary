<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:contentPaddingLeft="@dimen/search_box_margin_start"
    card_view:contentPaddingRight="@dimen/search_box_margin_end"
    card_view:contentPaddingTop="@dimen/vertical_padding_half"
    card_view:contentPaddingBottom="@dimen/vertical_padding_half"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorBackground"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtWord"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            tools:text="@string/dump_word" />

        <TextView
            android:id="@+id/txtIpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_quarter"
            android:layout_marginLeft="@dimen/activity_margin_quarter"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:textStyle="italic"
            android:maxLines="1"
            android:textColor="@color/textSecondary"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/txtWord"
            tools:text="@string/dump_ipaAme"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/padding_4dp"
            android:paddingLeft="@dimen/padding_4dp"
            android:paddingEnd="@dimen/padding_4dp"
            android:paddingRight="@dimen/padding_4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_black_24"
            android:tint="@color/textPrimary"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/des_favorite_button"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>